module Main
where
import Test.Hspec
import Bowling

allGutters = replicate 20 0

only = take 20 . cycle

main :: IO()
main = hspec $ do
    describe "the score" $ do
        it "should be zero when all gutters" $ do
            score (only [0]) `shouldBe` 0

        it "should add the throws of an average player" $ do
            score (only [2,3])  `shouldBe` 50
